<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000000">

    <VideoView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ayayaVideo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:foregroundGravity="center"/>
    <Chronometer
            android:id="@+id/chronometer" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="171dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/ayayaVideo"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="#FF0000" tools:text="00" android:textSize="30sp"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>